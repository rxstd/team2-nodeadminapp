<form
  action="list"
  method="POST"
  onsubmit="return checkForm();"
>
  <div class="ibox-content m-b-sm border-bottom">
    <div class="row">
      <div class="col-sm-4">
        <div class="form-group">
          <label class="control-label" for="boardTypeCode"
            >게시판타입</label
          >
          <select name="boardTypeCode" id="boardTypeCode" class="form-control">
              <option value="" <%= schOption.boardTypeCode === '' ? 'selected' : '' %>>전체</option>
              <option value="1" <% if (schOption.boardTypeCode === '1') { %>selected<%}%>>공지게시판</option>
              <option value="2" <%= schOption.boardTypeCode === '2' ? 'selected' : '' %>>기술블로깅</option>
              <option value="3" <% if (schOption.boardTypeCode === '3') { %>selected<%}%>>자유게시판</option>
            </select>
        </div>
      </div>
      <div class="col-sm-4">
        <div class="form-group">
          <label class="control-label" for="title">제목</label>
          <input
            type="text"
            class="form-control"
            name="title"
            id="title"
            value="<%= schOption.title %>"
          />
        </div>
      </div>
      <div class="col-sm-4">
        <div class="form-group">
          <label class="control-label" for="MobileNo">게시여부</label>
          <select
            name="isDisplay"
            id="isDisplay"
            class="form-control"
            value="<%= schOption.isDisplay %>"
          >
            <option value="" <%= schOption.isDisplay === '' ? 'selected' : '' %>>전체</option>
            <option value="1" <%= schOption.isDisplay === '1' ? 'selected' : '' %>>Y</option>
            <option value="0" <%= schOption.isDisplay === '0' ? 'selected' : '' %>>N</option>
          </select>
        </div>
      </div>
    </div>
    <div class="text-center">
      <button type="submit" class="btn btn-info">조회</button>
      <a href="create" class="btn btn-danger"
        >신규게시글 작성</a
      >
    </div>
  </div>
</form>
<script>
  function checkForm() {
    if ($("#boardTypeCode").val() == "") {
      alert("게시판타입을 선택하세요.");
      return false;
    }
    if ($("#title").val() == "") {
      alert("제목을 입력하세요.");
      return false;
    }
    if ($("#isDisplay").val() == "") {
      alert("게시여부를 선택하세요.");
      return false;
    }
    return false;
  }
</script>
<div class="row">
  <div class="col-lg-12">
    <div class="ibox float-e-margins">
      <div class="ibox-content">
        <div class="table-responsive">
          <table class="table table-hover">
            <thead>
              <tr>
                <th width="5%">순번</th>
                <th width="10%">게시판구분</th>
                <th width="50%">제목</th>
                <th width="5%">조회수</th>
                <th width="5%">IP주소</th>
                <th width="5%">게시상태</th>
                <th width="10%">등록일자</th>
              </tr>
            </thead>
            <tbody class="hoverTblBody" id="list_table">
            </tbody>
          </table>
        </div>
      </div>
    </div>
  </div>
</div>